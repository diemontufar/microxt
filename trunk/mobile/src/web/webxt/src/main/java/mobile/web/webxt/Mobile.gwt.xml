<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='webxt'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.http.HTTP' />
	<!--<inherits name='com.google.gwt.json' /> -->
	<inherits name='com.google.gwt.maps.GoogleMaps' />
	<inherits name='com.googlecode.gwt.crypto.Crypto' />
	<!--<inherits name="com.google.gwt.i18n.I18N"/> -->

	<!-- Inherit the default GWT style sheet -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />

	<!-- GXT -->
	<inherits name='com.extjs.gxt.ui.GXT' />

	<!-- Locale -->
	<extend-property name="locale" values="es"/> <set-property-fallback 
		name="locale" value="es"/>

	<!-- Optimizations -->
	<!-- <set-property name="user.agent" value="safari"></set-property> -->
	<!-- <collapse-all-properties/> -->

	<!-- Mobile inherits -->
	<inherits name="mobile.common.Message" />
	<inherits name="mobile.common.Tools" />

	<!-- Specify the app entry point class. -->
	<entry-point class='mobile.web.webxt.client.Mobile' />

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />
</module>
