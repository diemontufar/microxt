<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="thesis" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>microxt.entity.entity.ParameterPk</class>
		<class>microxt.entity.entity.EntityRelationshipPK</class>
		<class>microxt.entity.entity.EntityRelationshipFieldPK</class>
		<class>microxt.entity.entity.EntityRelationshipField</class>
		<class>microxt.entity.entity.EntityFieldPK</class>
		<class>microxt.entity.entity.DataTypeByDbPK</class>
		<class>microxt.entity.common.AbstractOptimisticLocking</class>
		<class>microxt.entity.common.AbstractMultilanguageKey</class>
		<class>microxt.entity.common.AbstractMultilanguageAndCompanyKey</class>
		<class>microxt.entity.common.AbstractMulticompanyKey</class>
		<class>microxt.entity.common.AbstractKey</class>
		<class>microxt.entity.common.AbstractHistoricalLocking</class>
		<class>microxt.entity.common.AbstractHistoricalLanguageKey</class>
		<class>microxt.entity.common.AbstractHistoricalKey</class>
		<class>microxt.entity.common.AbstractHistoricalAndLanguageAndCompanyKey</class>
		<class>microxt.entity.common.AbstractHistorical</class>
		<class>microxt.entity.common.AbstractEntity</class>
		<class>microxt.entity.entity.Company</class>
		<class>microxt.entity.entity.DatabaseType</class>
		<class>microxt.entity.entity.DatabaseTypePK</class>
		<class>microxt.entity.entity.DataType</class>
		<class>microxt.entity.entity.Entity</class>
		<class>microxt.entity.entity.EntityPK</class>
		<class>microxt.entity.entity.EntityField</class>
		<class>microxt.entity.entity.EntityFieldId</class>
		<class>microxt.entity.entity.EntityFieldIdPK</class>
		<class>microxt.entity.entity.EntityId</class>
		<class>microxt.entity.entity.Sequential</class>
		<class>microxt.entity.entity.SequentialPK</class>
		<class>microxt.entity.entity.SequentialId</class>
		<properties>
            <!--Conexion-->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/thesis"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <!--MySQL-->
            <property name="eclipselink.target-database"
                      value="org.eclipse.persistence.platform.database.MySQLPlatform"/>
            <!--Logging-->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.timestamp" value="false"/>
            <property name="eclipselink.logging.session" value="false"/>
            <property name="eclipselink.logging.thread" value="false"/>
            <property name="eclipselink.logging.exceptions" value="true"/>
            <property name="eclipselink.logging.connection" value="true"/>
            <!--DDL-Generation-->
            <!-- 
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
            <property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL.sql"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL.sql"/>
            <property name="eclipselink.ddl.default-table-suffix" value="ENGINE=InnoDB DEFAULT CHARSET=utf8"/>
             -->
        </properties>
		
	</persistence-unit>
</persistence>
